@model MvcKutuphane.Models.Entity.TBLYAZAR
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
{
    @Html.HiddenFor(m=>m.ID)
    <div class="form-group">
        <label>Yazar Adı</label>
        @Html.TextBoxFor(m => m.AD, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Yazar Soyadı</label>
        @Html.TextBoxFor(m => m.SOYAD, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Yazar Detay Bilgileri</label>
        @Html.TextAreaFor(m => m.DETAY, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-primary">Güncelle</button>
    </div>
}
