@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Yazarlar</h2>
<br />

<table class="table table-bordered">
    <thead>
        <tr style="background-color:rgb(252,178,22)">
            <th>YAZAR ID</th>
            <th>AD</th>
            <th>SOYAD</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>YAZARIN KİTAPLARI</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var yzr in Model)
        {
            <tr>
                <td>@yzr.ID</td>
                <td>@yzr.AD</td>
                <td>@yzr.SOYAD</td>
                <td>@Html.ActionLink("Sil","YazarSil",new {id=yzr.ID }, new {@class="btn btn-danger", onclick="return confirm('Gerçekten silmek istiyor musunuz?')" })</td>
                <td><a href="/Yazar/YazarGetir/@yzr.ID" class="btn btn-success">GÜNCELLE</a></td>
                <td><a href="/Yazar/YazarKitaplar/@yzr.ID" class="btn btn-info">YAZARIN KİTAPLARI</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Kaydı</a>

