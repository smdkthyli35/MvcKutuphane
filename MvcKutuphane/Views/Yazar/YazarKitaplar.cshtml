@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "YazarKitaplar";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Kitap Yazarı : @ViewBag.yzr1</h2>
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kitap Adı</th>
            <th>Kategori</th>
            <th>Yayınevi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.AD</td>
                <td>@x.TBLKATEGORI.AD</td>
                <td>@x.YAYINEVI</td>
            </tr>
        }
    </tbody>
</table>

