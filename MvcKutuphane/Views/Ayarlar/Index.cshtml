@using MvcKutuphane.Models.Entity
@model List<TBLADMIN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Mvc Kütüphane</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>
<body class="hold-transition sidebar-mini">

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 30%">
                                Kullanıcı Adı
                            </th>
                            <th style="width: 30%" class="text-center">
                                Yetki
                            </th>
                            <th style="width: 15%">
                                Düzenle
                            </th>
                            <th style="width: 15%">
                                Sil
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>
                                    @x.ID
                                </td>
                                <td>
                                    <a>
                                        @x.KULLANICI
                                    </a>
                                </td>

                                <td class="project-state">
                                    <span class="badge badge-success">@x.YETKI</span>
                                </td>
                                <td class="project-actions">
                                    <a class="btn btn-info btn-lg" href="/Ayarlar/AdminGuncelle/@x.ID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-danger btn-lg" href="/Ayarlar/AdminSil/@x.ID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
            <!-- /.card-body -->

        </div>


        <!-- /.card -->

    </section>
    <button style="font-size:15px" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#Modal1">Yeni Admin Ekle</button>

    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Admin Ekleme Paneli</h2>
                </div>
                <form method="post" action="/Ayarlar/YeniAdmin/">
                    <div class="modal-body">
                        <label>Kullanıcı Adı</label>
                        <input style="font-size:14px" type="text" name="KULLANICI" class="form-control" />
                        <br />
                        <label>Şifre</label>
                        <input style="font-size:14px" type="text" name="SIFRE" class="form-control" />
                        <br />
                        <label>Yetki</label>
                        <input style="font-size:14px" type="text" name="YETKI" class="form-control" />
                        <br />
                        <button style="font-size:14px" class="btn btn-info btn-lg">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <!-- jQuery -->
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>


