@model MvcKutuphane.Models.Entity.TBLADMIN

@{
    ViewBag.Title = "AdminGuncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("AdminGuncelle", "Ayarlar", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ID)

    <div class="form-group">
        @Html.Label("Kullanıcı Adı")
        @Html.TextBoxFor(m => m.KULLANICI, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Şifre")
        @Html.TextBoxFor(m => m.SIFRE, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Yetkisi")
        @Html.TextBoxFor(m => m.YETKI, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <button class="btn btn-primary">Admin Bilgilerini Güncelle</button>
    </div>
}
