@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "UyeKitapGecmis";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Üye Adı-Soyadı : @ViewBag.uye1</h2>
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kitap Adı</th>
            <th>Personel</th>
            <th>Alış Tarihi</th>
            <th>İade Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.TBLKITAP.AD</td>
                <td>@x.TBLPERSONEL.PERSONEL</td>
                <td>@Convert.ToDateTime(x.ALISTARIH).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(x.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

