@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Kitaplar</h2>
<br />

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom: 30px;">
        <b>Aranacak kitap adını giriniz: &nbsp;</b> @Html.TextBox("p")
        <input type="submit" value="Ara" class="btn btn-warning" />
    </div>
}


<table class="table table-bordered">
    <thead>
        <tr style="background-color:rgb(252,178,22)">
            <th>ID</th>
            <th>Kitap Adı</th>
            <th>Kitap Yazarı</th>
            <th>Kategorisi</th>
            <th>Basım Yılı</th>
            <th>Yayınevi</th>
            <th>Sayfa Sayısı</th>
            <th>Durum</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ktp in Model)
        {
            <tr>
                <td>@ktp.ID</td>
                <td>@ktp.AD</td>
                <td>@ktp.TBLYAZAR.AD&nbsp;@ktp.TBLYAZAR.SOYAD</td>
                <td>@ktp.TBLKATEGORI.AD</td>
                <td>@ktp.BASIMYIL</td>
                <td>@ktp.YAYINEVI</td>
                <td>@ktp.SAYFA</td>
                <td>@ktp.DURUM</td>
                <td>@Html.ActionLink("Sil", "KitapSil", new { id = ktp.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" })</td>
                <td><a href="/Kitap/KitapGetir/@ktp.ID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Kitap/YeniKitap/" class="btn btn-primary">Yeni Kitap Kaydı</a>

