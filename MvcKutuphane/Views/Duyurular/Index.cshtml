@using MvcKutuphane.Models.Entity
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Duyurular</h2>
<br />

<table class="table table-bordered">
    <thead>
        <tr style="background-color:rgb(252,178,22)">
            <th>Duyuru ID</th>
            <th>Kategori</th>
            <th>Tarih</th>
            <th>Sil</th>
            <th>İçerik</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.KATEGORI</td>
                <td>@Convert.ToDateTime(x.TARIH).ToString("dd/MM/yyyy")</td>
                <td>@Html.ActionLink("Sil", "DuyuruSil", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" })</td>
                <td><a href="/Duyurular/DuyuruDetay/@x.ID" class="btn btn-info">Detaylar</a></td>
            </tr>
        }
    </tbody>

</table>

<a href="/Duyurular/YeniDuyuru/" class="btn btn-primary">Yeni Duyuru Ekle</a>
