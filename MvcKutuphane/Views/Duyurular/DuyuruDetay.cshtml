@model MvcKutuphane.Models.Entity.TBLDUYURULAR
@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("DuyuruGuncelle", "Duyurular", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ID)

    <div class="form-group">
        <label>Duyuru Kategori</label>
        @Html.TextBoxFor(m => m.KATEGORI, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Duyuru İçerik</label>
        @Html.TextAreaFor(m => m.ICERIK, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Tarih</label>
        @Html.TextBoxFor(m => m.TARIH, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <button class="btn btn-primary">Duyuru Güncelle</button>
    </div>
}

