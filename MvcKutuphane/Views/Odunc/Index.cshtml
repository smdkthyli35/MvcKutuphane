@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<h2>Ödünç Kitap Listesi</h2>
<br />

<table class="table table-bordered">
    <thead>
        <tr style="background-color:rgb(252,178,22)">
            <th>İşlem ID</th>
            <th>Kitap Adı</th>
            <th>Üye Adı-Soyadı</th>
            <th>Personel Adı-Soyadı</th>
            <th>Alış Tarihi</th>
            <th>İade Tarihi</th>
            <th>Kitap İade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.TBLKITAP.AD</td>
                <td>@x.TBLUYELER.AD&nbsp;@x.TBLUYELER.SOYAD</td>
                <td>@x.TBLPERSONEL.PERSONEL</td>
                <td>@Convert.ToDateTime(x.ALISTARIH).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(x.IADETARIH).ToString("dd/MM/yyyy")</td>
                <td><a href="/Odunc/OduncIade/@x.ID" class="btn btn-warning">Kitabı İade Et</a></td>
            </tr>
        }
    </tbody>
</table>

